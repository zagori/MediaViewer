<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MediaFragment">

    <View
        android:id="@+id/background_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/dismiss_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zagori.mediaviewer.views.MultiTouchViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--This contains the top action bar-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:background="@color/dark_transparent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/delete_media"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Delete"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:drawableTop="@android:drawable/ic_menu_delete"
                android:background="@android:color/transparent"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/add_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/delete_media"
                android:background="@android:color/transparent"
                android:drawableTop="@android:drawable/ic_menu_camera"
                android:text="Add Media"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textAllCaps="false"/>

            <TextView
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:layout_alignEnd="@+id/delete_media"
                android:textSize="14sp"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

        <!--This contains the bottom action bar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:background="@color/dark_transparent">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>